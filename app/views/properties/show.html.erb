<h1>閲覧</h1>

<div class="contents">

  <p>
    <strong>物件名:</strong>
    <%= @property.property_name %>
  </p>

  <p>
    <strong>賃料:</strong>
    <%= @property.fee.to_s(:delimited) + "円" %>
  </p>

  <p>
    <strong>住所:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @property.building_age.to_s + "年" %>
  </p>

  <p>
    <strong>備考:</strong>
    <%= @property.remarks %>
  </p>
</div>

<div class="contents2">
  <hr>
  <% i=1 %>
  <% @station.each do |station| %>
    <h3><%= "最寄り駅" + i.to_s %></h3>
    <p>
      <strong>路線名</strong>
      <%= station.line_name %>
    </p>
    <p>
    <strong>駅名</strong>
    <%= station.station_name %>
    </p>
    <p>
    <strong>徒歩分数</strong>
    <%= station.walk_minutes.to_s + "分" %>
    </p>
    <% i+=1 %>
  <% end %>
</div>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
