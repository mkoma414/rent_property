<h1>編集</h1>

<div class="contents">
<h2>物件編集</h2>

<%= form_for(@property) do |f| %>

  <div class="field">
    <%= f.label :物件名 %><br>
    <%= f.text_field :property_name %>
  </div>

  <div class="field">
    <%= f.label :賃料 %><br>
    <%= f.number_field :fee %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :築年数 %><br>
    <%= f.number_field :building_age %>
  </div>

  <div class="field">
    <%= f.label :備考 %><br>
    <%= f.text_area :remarks %>
  </div>

  <hr>

  <div class="field">
    <% i=1 %>

    <%#= f.label :stations, :電車 %>
    <%= f.fields_for :stations do |stations_form|  %>
      <h3><%= "最寄り駅" + i.to_s %></h2>
      <p>
        <%= stations_form.label :路線名 %><br>
        <%= stations_form.text_field :line_name %>
      </p>
      <p>
        <%= stations_form.label :駅名 %><br>
        <%= stations_form.text_field :station_name %>
      </p>
      <p>
        <%= stations_form.label :徒歩分数 %><br>
        <%= stations_form.number_field :walk_minutes %>
      </p>
      <% i+= 1 %>

    <% end %>
  </div>

  <div class="actions">
    <%= f.submit '更新する'%><br>
     <%= link_to '詳細', property_path %>|
     <%= link_to '戻る', properties_path %>

  </div>
  <% end %>
</div>
